{
  "name": "PyTorch CUDA Dev Container",
  "image": "pytorch/pytorch:2.7.0-cuda12.6-cudnn9-runtime",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "charliermarsh.ruff",
        "aaron-bond.better-comments",
        "iterative.dvc"
      ],
      "settings": {
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": ["tests"]
      }
    }
  },

  "postCreateCommand": "uv sync",

  "features": {
    "ghcr.io/devcontainers-extra/features/wget-apt-get:1": {},
    "ghcr.io/va-h/devcontainers-features/uv:1": {},
    "ghcr.io/iterative/features/dvc:1": {}
  },

  "containerEnv": {
    "PYTHONUNBUFFERED": "True"
  },

  // Use 'remoteUser' to connect as a specific user in the container
  "remoteUser": "root"
}
